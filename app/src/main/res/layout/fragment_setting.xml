<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.FragmentSetting">

    <TextView
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/circle_white_80"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/circle_white_60"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:background="@drawable/circle_white_40"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/circle_white_20"
                                android:gravity="center">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/mtrl_card_checked_layer_id"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/colorAccent"
                                        android:elevation="2dp"
                                        app:cardCornerRadius="100dp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        tools:ignore="MissingConstraints">

                                        <ImageView
                                            android:id="@+id/imgUserImage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="@string/hello_blank_fragment"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            tools:ignore="MissingConstraints" />
                                    </androidx.cardview.widget.CardView>

                                    <LinearLayout
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:background="@drawable/circle_coloraccent"
                                        android:elevation="2dp"
                                        android:gravity="center"
                                        app:layout_constraintBottom_toBottomOf="@+id/mtrl_card_checked_layer_id"
                                        app:layout_constraintEnd_toEndOf="@+id/mtrl_card_checked_layer_id">

                                        <ImageView
                                            android:id="@+id/imgChooseImage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:padding="4dp"
                                            android:src="@drawable/ic_add_white"
                                            android:textColor="@color/black" />
                                    </LinearLayout>

                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/iranyekanmobilemedium"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/iranyekanmobilemedium"
                        android:text="سلام"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/bigText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/iranyekanmobilelight"
                        android:text="سخن بزرگان"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="8dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/material_size_8"
                    android:layout_height="48dp">

               <EditText
                   android:id="@+id/edtUserName"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:hint="اینجا بنویس"
                   android:fontFamily="@font/iranyekanmobilelight"
                   android:layoutDirection="rtl"
                   android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/txtNameBox"
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:text="اسمت چیه ؟ "
                    android:fontFamily="@font/iranyekanmobilebold"
                    android:layout_marginLeft="@dimen/material_size_8"
                    android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>